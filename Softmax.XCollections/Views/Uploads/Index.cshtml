 @model Softmax.XCollections.Models.UploadModel
@{
    ViewBag.Title = "New Upload";
}
<div class="row" style="padding-top:45px">
    <div class="col-md-4"></div>
    <div class="col-md-4">
        <h2>@ViewBag.Title</h2>
        @using (Html.BeginForm("Process", "Uploads", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">

                @Html.ValidationSummary(true)

                <div class="form-group">
                    @Html.LabelFor(model => model.Table, new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        <select name="table" class="form-control">
                            <option value="1">Users</option>
                            <option value="2">Deposits</option>
                        </select>
                        @Html.ValidationMessageFor(model => model.Table)
                    </div>
                </div>

                <div class="form-group">
                   
                    <div class="control-label col-md-2">CSV File</div>
                    <div class="col-md-10">
                        <input type="file" name="csv" class="form-control"/>
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Upload" class="btn btn-primary" />
                        @Html.ActionLink("Cancel", "Index", null, null, new { @class = "btn btn-default" })
                    </div>
                </div>
            </div>
            <div class="col-md-12">
                @*<a href="">Sample CSV - Users</a> <br/>
                <a href="">Sample CSV- Deposits</a>*@
            </div>
            <div class="col-md-12">
                @if (TempData["Message"] != null)
                {
                    <span class="text-success">@TempData["Message"]</span>
                }
            </div>
        }

    </div>
    <div class="col-md-4"></div>
</div>
