@using System.Globalization
@using Microsoft.AspNetCore.Identity

<div class="table-responsive">
   
    <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
        <thead>
        <tr>
            <th>
                Month
            </th>
                
            <th>
                Total Disbursed
            </th>
           
            <th>
                Amount Disbursed
            </th>
           
        </tr>
        </thead>
        <tfoot>
        <tr>
            <th>
                Month
            </th>
                
            <th>
                Total Disbursed
            </th>
            
            <th>
                Amount Disbursed
            </th>
            
        </tr>
        </tfoot>
        <tbody>
        @if (ViewBag.MonthlyLoansSummary != null)
        {
            foreach (var item in ViewBag.MonthlyLoansSummary)
            {
                <tr>
                    <td>
                        <a href="~/Reports/MonthlyLoans/?id=@item.Date" target="_blank">@item.Date </a>
                    </td>
                    <td>
                        @item.Disbursed
                    </td>
                   
                    <td>
                        @item.AmountDisbursed
                    </td>
                     
                </tr>

            }
        }
        </tbody>
    </table>
</div>